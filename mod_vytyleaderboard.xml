<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>Vyty Leaderboard</name>
	<author>Vyty.com</author>
	<creationDate>Octomber, 2011</creationDate>
	<copyright>Copyright (C) 2010 Vyty.com </copyright>
	<license>http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>todor@vyty.com</authorEmail>
	<authorUrl>http://vyty.com</authorUrl>
	<version>1.0</version>
	<description><![CDATA[<p><a href="https://github.com/vyty/Joomla-Leaderboard">Vyty Leaderboard</a> displays a list of players who are part in your game.</p><p><a href="http://vyty.com/download" title="Gamification extensions" target="_blank">Download more gamification extensions</a></p><p>Please, <a href="http://extensions.joomla.org/extensions/social-web/social-channels-display/18721" target="_blank">vote for this module</a> on Joomla! Extensions Directory!</p>]]></description>
	
	<files>
		<filename module="mod_vytyleaderboard">mod_vytyleaderboard.php</filename>
		<filename>index.html</filename>
	</files>

	<params>
        <param name="game_id" type="text" default="" label="Game ID" description="The id of the game." />
		<param name="lb_id" type="text" default="" label="Leaderboard ID" description="The id of the leaderboard." />
		<param name="width" type="text" default="250" label="Width" description="The width of the widget." />
		<param name="height" type="text" default="427" label="Height" description="The height of the widget." />
		<param name="header" type="radio" default="1" label="Header" description="Display or not the header of the widget.">
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</param>
		<param name="position" type="list" default="right" label="Position" description="The players position">
			<option value="left">Left</option>
			<option value="right">Right</option>
		</param>
		<param name="points_state" type="list" default="short" label="Points state" description="Select how to display the points. Example: (short - 1000 points will be displayed as 1K)">
			<option value="full">Full</option>
			<option value="short">Short</option>
		</param>
		<param name="imp_code" type="radio" default="1" label="Implementation Code" description="Put the implementation code. That is the code that initialize the widgets. If the code has been installed, it is not necessary to put the code again. " >
		   <option value="0">No</option>
		   <option value="1">Yes</option>
		</param>
	</params>
</install>